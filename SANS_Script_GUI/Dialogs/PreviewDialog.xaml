<Window x:Class="LOQ_Script_Gui.Dialogs.PreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PreviewDialog" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderThickness="1" BorderBrush="Black" Margin="5">
            <ScrollViewer>

                <TextBlock x:Name="txtScript">
                </TextBlock>

            </ScrollViewer>
        </Border>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button x:Name="btnPrint" Margin="5" Visibility="Collapsed">Print Script</Button>
            <Button Margin="5" Click="Button_Click">Close</Button>
        </StackPanel>
    </Grid>
</Window>
